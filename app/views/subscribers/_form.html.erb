<%= form_with(model: subscriber) do |form| %>
  <% if subscriber.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subscriber.errors.count, "error") %> </h2>

      <ul>
        <% subscriber.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
      <%= form.text_field :sub_email, class: "form-control", placeholder: "name@example.com" %>
    </div>

   <div class ="mb-3">
      <%= form.submit "Share list", class: "btn btn-dark" %>
    </div>
<% end %>
